@model LinhKienDienTu.Models.Product

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="glass-card p-4 text-center">
            <i class="fa-solid fa-triangle-exclamation fa-4x text-warning mb-3"></i>
            <h3 class="text-white mb-3">Bạn có chắc muốn xóa sản phẩm này?</h3>
            <div class="bg-dark bg-opacity-50 p-3 rounded mb-4 text-start">
                <p class="mb-1"><strong>Tên:</strong> @Model.Name</p>
                <p class="mb-1"><strong>Mã SP:</strong> @Model.PartNumber</p>
                <p class="mb-0"><strong>Giá:</strong> @Model.Price.ToString("N0") ₫</p>
            </div>
            
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <a asp-action="Index" class="btn btn-outline-light me-2">Hủy bỏ</a>
                <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
            </form>
        </div>
    </div>
</div>
