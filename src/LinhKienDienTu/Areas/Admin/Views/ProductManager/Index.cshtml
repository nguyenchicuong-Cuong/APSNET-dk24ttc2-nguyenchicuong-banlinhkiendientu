@model IEnumerable<LinhKienDienTu.Models.Product>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-white">Quản lý sản phẩm</h2>
    <a asp-action="Create" class="btn btn-primary rounded-pill"><i class="fa-solid fa-plus me-2"></i>Thêm mới</a>
</div>

<div class="glass-card p-0 overflow-hidden">
    <table class="table table-dark table-hover mb-0">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Mã SP</th>
                <th>Danh mục</th>
                <th>Giá</th>
                <th>Tồn kho</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.PartNumber</td>
                    <td>@item.Category?.Name</td>
                    <td>@item.Price.ToString("N0") ₫</td>
                    <td>
                        @if (item.StockQuantity == 0)
                        {
                            <span class="badge bg-danger">Hết hàng</span>
                        }
                        else if (item.StockQuantity < 10)
                        {
                            <span class="badge bg-warning text-dark">Sắp hết (@item.StockQuantity)</span>
                        }
                        else
                        {
                            <span class="badge bg-success">@item.StockQuantity</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1"><i class="fa-solid fa-pen"></i></a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-light me-1"><i class="fa-solid fa-eye"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="fa-solid fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
