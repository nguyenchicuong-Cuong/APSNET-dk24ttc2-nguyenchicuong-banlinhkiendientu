@model LinhKienDienTu.Models.Product

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="glass-card p-4">
            <h2 class="mb-4 text-white">Chỉnh sửa sản phẩm</h2>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="form-label text-light"></label>
                        <input asp-for="Name" class="form-control glass-input" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="PartNumber" class="form-label text-light"></label>
                        <input asp-for="PartNumber" class="form-control glass-input" />
                        <span asp-validation-for="PartNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="CategoryId" class="form-label text-light">Danh mục</label>
                        <select asp-for="CategoryId" class="form-control glass-input" asp-items="ViewBag.CategoryId"></select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Manufacturer" class="form-label text-light"></label>
                        <input asp-for="Manufacturer" class="form-control glass-input" />
                        <span asp-validation-for="Manufacturer" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="Price" class="form-label text-light"></label>
                        <input asp-for="Price" class="form-control glass-input" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="BulkPrice" class="form-label text-light"></label>
                        <input asp-for="BulkPrice" class="form-control glass-input" />
                        <span asp-validation-for="BulkPrice" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="StockQuantity" class="form-label text-light"></label>
                        <input asp-for="StockQuantity" class="form-control glass-input" />
                        <span asp-validation-for="StockQuantity" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label text-light"></label>
                    <textarea asp-for="Description" class="form-control glass-input" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Specifications" class="form-label text-light"></label>
                    <textarea asp-for="Specifications" class="form-control glass-input" rows="3"></textarea>
                    <span asp-validation-for="Specifications" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label text-light"></label>
                    <input asp-for="ImageUrl" class="form-control glass-input" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DatasheetUrl" class="form-label text-light"></label>
                    <input asp-for="DatasheetUrl" class="form-control glass-input" />
                    <span asp-validation-for="DatasheetUrl" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-light">Hủy</a>
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                </div>
            </form>
        </div>
    </div>
</div>
