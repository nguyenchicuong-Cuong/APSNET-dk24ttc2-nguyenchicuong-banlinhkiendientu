@model dynamic

@{
    ViewData["Title"] = "Quản lý khách hàng";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-white">Quản lý khách hàng</h2>
</div>

<div class="glass-card p-0 overflow-hidden">
    <table class="table table-dark table-hover mb-0">
        <thead>
            <tr>
                <th>Email</th>
                <th>Tên đăng nhập</th>
                <th>Số đơn hàng</th>
                <th>Tổng chi tiêu</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.User.Email</td>
                    <td>@item.User.UserName</td>
                    <td><span class="badge bg-info">@item.OrderCount</span></td>
                    <td class="text-gradient fw-bold">@item.TotalSpent.ToString("N0") ₫</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.User.Id" class="btn btn-sm btn-outline-light">
                            <i class="fa-solid fa-eye"></i> Chi tiết
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
