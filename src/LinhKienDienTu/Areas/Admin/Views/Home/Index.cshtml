@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom border-secondary">
    <h1 class="h2 text-white">Dashboard</h1>
</div>

<div class="row">
    <div class="col-md-3 mb-4">
        <div class="glass-card p-3 text-center">
            <h3 class="text-gradient fw-bold">@ViewBag.NewOrders</h3>
            <p class="text-muted mb-0">Đơn hàng mới</p>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="glass-card p-3 text-center">
            <h3 class="text-gradient fw-bold">@ViewBag.LowStockProducts</h3>
            <p class="text-muted mb-0">Sản phẩm sắp hết</p>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="glass-card p-3 text-center">
            <h3 class="text-gradient fw-bold">@ViewBag.NewCustomers</h3>
            <p class="text-muted mb-0">Khách hàng</p>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="glass-card p-3 text-center">
            <h3 class="text-gradient fw-bold">@ViewBag.TodayRevenue.ToString("N0") ₫</h3>
            <p class="text-muted mb-0">Doanh thu hôm nay</p>
        </div>
    </div>
</div>

<div class="glass-card p-4">
    <h4 class="mb-3 border-bottom border-secondary pb-2">Đơn hàng gần đây</h4>
    @if (ViewBag.RecentOrders != null && ViewBag.RecentOrders.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th>Mã ĐH</th>
                        <th>Khách hàng</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in ViewBag.RecentOrders)
                    {
                        <tr>
                            <td>
                                <a asp-controller="OrderManager" asp-action="Details" asp-route-id="@order.Id" class="text-info text-decoration-none">
                                    #@order.Id
                                </a>
                            </td>
                            <td>@order.CustomerName</td>
                            <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="text-gradient fw-bold">@order.TotalAmount.ToString("N0") ₫</td>
                            <td>
                                @switch (order.Status)
                                {
                                    case LinhKienDienTu.Models.OrderStatus.Pending:
                                        <span class="badge bg-warning text-dark">Chờ xử lý</span>
                                        break;
                                    case LinhKienDienTu.Models.OrderStatus.Processing:
                                        <span class="badge bg-info text-dark">Đang xử lý</span>
                                        break;
                                    case LinhKienDienTu.Models.OrderStatus.Shipping:
                                        <span class="badge bg-primary">Đang giao</span>
                                        break;
                                    case LinhKienDienTu.Models.OrderStatus.Delivered:
                                        <span class="badge bg-success">Đã giao</span>
                                        break;
                                    case LinhKienDienTu.Models.OrderStatus.Cancelled:
                                        <span class="badge bg-danger">Đã hủy</span>
                                        break;
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted">Chưa có đơn hàng nào.</p>
    }
</div>
