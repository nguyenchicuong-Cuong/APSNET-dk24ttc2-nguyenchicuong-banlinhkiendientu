@model LinhKienDienTu.Models.Order

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="row">
    <div class="col-md-8">
        <div class="glass-card p-4 mb-4">
            <div class="d-flex justify-content-between align-items-center mb-4 border-bottom border-secondary pb-3">
                <h3 class="text-white m-0">Đơn hàng #@Model.Id</h3>
                <span class="text-white-50">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</span>
            </div>

            <div class="table-responsive">
                <table class="table table-dark table-transparent">
                    <thead>
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Giá</th>
                            <th>SL</th>
                            <th class="text-end">Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td>
                                    <div>@item.Product.Name</div>
                                    <small class="text-muted">@item.Product.PartNumber</small>
                                </td>
                                <td>@item.UnitPrice.ToString("N0") ₫</td>
                                <td>@item.Quantity</td>
                                <td class="text-end">@item.TotalPrice.ToString("N0") ₫</td>
                            </tr>
                        }
                        <tr class="border-top border-secondary">
                            <td colspan="3" class="text-end fw-bold">Tổng cộng:</td>
                            <td class="text-end fw-bold text-gradient fs-5">@Model.TotalAmount.ToString("N0") ₫</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="glass-card p-4 mb-4">
            <h4 class="mb-3 border-bottom border-secondary pb-2">Thông tin khách hàng</h4>
            <p class="mb-1"><strong>Họ tên:</strong> @Model.CustomerName</p>
            <p class="mb-1"><strong>SĐT:</strong> @Model.PhoneNumber</p>
            <p class="mb-1"><strong>Email:</strong> @Model.Email</p>
            <p class="mb-1"><strong>Địa chỉ:</strong> @Model.ShippingAddress</p>
            <p class="mb-0"><strong>Ghi chú:</strong> @Model.Notes</p>
        </div>

        <div class="glass-card p-4">
            <h4 class="mb-3 border-bottom border-secondary pb-2">Cập nhật trạng thái</h4>
            <form asp-action="UpdateStatus" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                
                <div class="mb-3">
                    <label class="form-label text-light">Trạng thái đơn hàng</label>
                    <select name="status" class="form-select glass-input" asp-for="Status" asp-items="Html.GetEnumSelectList<LinhKienDienTu.Models.OrderStatus>()"></select>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                </div>
            </form>
        </div>
    </div>
</div>
