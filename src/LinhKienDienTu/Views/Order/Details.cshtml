@model LinhKienDienTu.Models.Order

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-gradient fw-bold">Đơn hàng #@Model.Id</h2>
        <a asp-action="MyOrders" class="btn btn-outline-light rounded-pill">
            <i class="fa-solid fa-arrow-left me-2"></i>Quay lại
        </a>
    </div>

    <div class="row">
        <div class="col-md-8 mb-4">
            <div class="glass-card p-4">
                <h4 class="mb-3 border-bottom border-secondary pb-2">Sản phẩm</h4>
                <div class="table-responsive">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Đơn giá</th>
                                <th>Số lượng</th>
                                <th class="text-end">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItems)
                            {
                                <tr>
                                    <td>
                                        <div>
                                            <strong>@item.Product.Name</strong>
                                        </div>
                                        <small class="text-muted">@item.Product.PartNumber</small>
                                    </td>
                                    <td>@item.UnitPrice.ToString("N0") ₫</td>
                                    <td>@item.Quantity</td>
                                    <td class="text-end fw-bold">@item.TotalPrice.ToString("N0") ₫</td>
                                </tr>
                            }
                            <tr class="border-top border-secondary">
                                <td colspan="3" class="text-end fw-bold fs-5">Tổng cộng:</td>
                                <td class="text-end fw-bold text-gradient fs-4">@Model.TotalAmount.ToString("N0") ₫</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="glass-card p-4 mb-4">
                <h4 class="mb-3 border-bottom border-secondary pb-2">Thông tin đơn hàng</h4>
                <p class="mb-2"><strong>Ngày đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                <p class="mb-2"><strong>Trạng thái:</strong> 
                    @switch (Model.Status)
                    {
                        case LinhKienDienTu.Models.OrderStatus.Pending:
                            <span class="badge bg-warning text-dark">Chờ xử lý</span>
                            break;
                        case LinhKienDienTu.Models.OrderStatus.Processing:
                            <span class="badge bg-info text-dark">Đang xử lý</span>
                            break;
                        case LinhKienDienTu.Models.OrderStatus.Shipping:
                            <span class="badge bg-primary">Đang giao</span>
                            break;
                        case LinhKienDienTu.Models.OrderStatus.Delivered:
                            <span class="badge bg-success">Đã giao</span>
                            break;
                        case LinhKienDienTu.Models.OrderStatus.Cancelled:
                            <span class="badge bg-danger">Đã hủy</span>
                            break;
                    }
                </p>
                <p class="mb-2"><strong>Thanh toán:</strong> 
                    @if (Model.IsPaid)
                    {
                        <span class="badge bg-success">Đã thanh toán</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Chưa thanh toán</span>
                    }
                </p>
                <p class="mb-0"><strong>Phương thức:</strong> @Model.PaymentMethod</p>
            </div>

            <div class="glass-card p-4">
                <h4 class="mb-3 border-bottom border-secondary pb-2">Thông tin giao hàng</h4>
                <p class="mb-2"><strong>Người nhận:</strong> @Model.CustomerName</p>
                <p class="mb-2"><strong>Số điện thoại:</strong> @Model.PhoneNumber</p>
                <p class="mb-2"><strong>Email:</strong> @Model.Email</p>
                <p class="mb-2"><strong>Địa chỉ:</strong> @Model.ShippingAddress</p>
                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <p class="mb-0"><strong>Ghi chú:</strong> @Model.Notes</p>
                }
            </div>
        </div>
    </div>
</div>
