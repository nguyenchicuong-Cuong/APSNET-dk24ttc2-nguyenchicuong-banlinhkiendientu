@model IEnumerable<LinhKienDienTu.Models.Order>

@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<div class="container mt-4">
    <h2 class="mb-4 text-gradient fw-bold"><i class="fa-solid fa-clipboard-list me-2"></i>Đơn hàng của tôi</h2>

    @if (!Model.Any())
    {
        <div class="glass-card text-center py-5">
            <i class="fa-solid fa-clipboard-list fa-5x mb-3 opacity-50"></i>
            <h4>Chưa có đơn hàng nào</h4>
            <p class="text-muted">Bạn chưa đặt đơn hàng nào. Hãy khám phá sản phẩm của chúng tôi!</p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary mt-3 rounded-pill">
                <i class="fa-solid fa-shopping-bag me-2"></i>Mua sắm ngay
            </a>
        </div>
    }
    else
    {
        <div class="glass-card p-0 overflow-hidden">
            <table class="table table-dark table-hover mb-0">
                <thead>
                    <tr>
                        <th>Mã đơn hàng</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Thanh toán</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td class="fw-bold">#@order.Id</td>
                            <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="text-gradient fw-bold">@order.TotalAmount.ToString("N0") ₫</td>
                            <td>
                                @switch (order.Status)
                                {
                                    case LinhKienDienTu.Models.OrderStatus.Pending:
                                        <span class="badge bg-warning text-dark"><i class="fa-solid fa-clock me-1"></i>Chờ xử lý</span>
                                        break;
                                    case LinhKienDienTu.Models.OrderStatus.Processing:
                                        <span class="badge bg-info text-dark"><i class="fa-solid fa-gear me-1"></i>Đang xử lý</span>
                                        break;
                                    case LinhKienDienTu.Models.OrderStatus.Shipping:
                                        <span class="badge bg-primary"><i class="fa-solid fa-truck me-1"></i>Đang giao</span>
                                        break;
                                    case LinhKienDienTu.Models.OrderStatus.Delivered:
                                        <span class="badge bg-success"><i class="fa-solid fa-check-circle me-1"></i>Đã giao</span>
                                        break;
                                    case LinhKienDienTu.Models.OrderStatus.Cancelled:
                                        <span class="badge bg-danger"><i class="fa-solid fa-times-circle me-1"></i>Đã hủy</span>
                                        break;
                                }
                            </td>
                            <td>
                                @if (order.IsPaid)
                                {
                                    <span class="badge bg-success">Đã thanh toán</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Chưa thanh toán</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-light">
                                    <i class="fa-solid fa-eye me-1"></i>Chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
