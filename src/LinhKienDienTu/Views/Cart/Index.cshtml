@model LinhKienDienTu.Models.Cart

@{
    ViewData["Title"] = "Giỏ hàng";
}

<div class="container mt-4">
    <h2 class="mb-4 text-gradient fw-bold"><i class="fa-solid fa-cart-shopping me-2"></i>Giỏ hàng của bạn</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show glass-card" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Items.Any())
    {
        <div class="glass-card text-center py-5">
            <i class="fa-solid fa-cart-shopping fa-5x mb-3 opacity-50"></i>
            <h4>Giỏ hàng trống</h4>
            <p class="text-muted">Hãy thêm sản phẩm vào giỏ hàng để tiếp tục mua sắm</p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary mt-3 rounded-pill">
                <i class="fa-solid fa-arrow-left me-2"></i>Tiếp tục mua sắm
            </a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="glass-card">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Đơn giá</th>
                                <th>Số lượng</th>
                                <th>Thành tiền</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-white rounded p-2 me-3" style="width: 60px; height: 60px;">
                                                <i class="fa-solid fa-microchip fa-2x text-secondary"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0">@item.Product.Name</h6>
                                                <small class="text-muted">Mã: @item.Product.PartNumber</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="align-middle">
                                        @if (item.Quantity > 100 && item.Product.BulkPrice.HasValue)
                                        {
                                            <span class="text-success">@item.Product.BulkPrice.Value.ToString("N0") ₫</span>
                                        }
                                        else
                                        {
                                            <span>@item.Product.Price.ToString("N0") ₫</span>
                                        }
                                    </td>
                                    <td class="align-middle">
                                        <form asp-action="UpdateQuantity" method="post" class="d-inline">
                                            <input type="hidden" name="productId" value="@item.Product.Id" />
                                            <div class="input-group" style="width: 130px;">
                                                <button type="submit" name="quantity" value="@(item.Quantity - 1)" class="btn btn-sm btn-outline-light">-</button>
                                                <input type="text" class="form-control form-control-sm text-center glass-input" value="@item.Quantity" readonly />
                                                <button type="submit" name="quantity" value="@(item.Quantity + 1)" class="btn btn-sm btn-outline-light">+</button>
                                            </div>
                                        </form>
                                    </td>
                                    <td class="align-middle fw-bold text-gradient">@item.TotalPrice.ToString("N0") ₫</td>
                                    <td class="align-middle">
                                        <form asp-action="RemoveFromCart" method="post" class="d-inline">
                                            <input type="hidden" name="productId" value="@item.Product.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?')">
                                                <i class="fa-solid fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="glass-card sticky-top" style="top: 100px;">
                    <h5 class="mb-3 border-bottom border-secondary pb-2">Tóm tắt đơn hàng</h5>
                    
                    <div class="d-flex justify-content-between mb-2">
                        <span>Tổng sản phẩm:</span>
                        <span>@Model.Items.Sum(i => i.Quantity)</span>
                    </div>
                    
                    <div class="d-flex justify-content-between mb-3 pb-3 border-bottom border-secondary">
                        <span>Tạm tính:</span>
                        <span class="fw-bold">@Model.ComputeTotalValue().ToString("N0") ₫</span>
                    </div>
                    
                    <div class="d-flex justify-content-between mb-3">
                        <h5>Tổng cộng:</h5>
                        <h5 class="text-gradient fw-bold">@Model.ComputeTotalValue().ToString("N0") ₫</h5>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <a asp-controller="Checkout" asp-action="Index" class="btn btn-primary btn-lg rounded-pill">
                            <i class="fa-solid fa-credit-card me-2"></i>Thanh toán
                        </a>
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-light rounded-pill">
                            <i class="fa-solid fa-arrow-left me-2"></i>Tiếp tục mua
                        </a>
                        <form asp-action="ClearCart" method="post">
                            <button type="submit" class="btn btn-outline-danger w-100 rounded-pill" onclick="return confirm('Bạn có chắc muốn xóa toàn bộ giỏ hàng?')">
                                <i class="fa-solid fa-trash me-2"></i>Xóa giỏ hàng
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
