@model LinhKienDienTu.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="glass-card p-5">
            <h2 class="text-center mb-4 text-gradient fw-bold">Đăng Nhập</h2>
            <form asp-action="Login" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                
                <div class="mb-3">
                    <label asp-for="Email" class="form-label text-light">Email</label>
                    <input asp-for="Email" class="form-control glass-input" placeholder="name@example.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Password" class="form-label text-light">Mật khẩu</label>
                    <input asp-for="Password" class="form-control glass-input" placeholder="********" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
                <div class="mb-3 form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label text-light"></label>
                </div>
                
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg rounded-pill">Đăng nhập</button>
                </div>

                <div class="text-center mt-3">
                    <a asp-action="ForgotPassword" class="text-light text-decoration-none">
                        <i class="fa-solid fa-key me-1"></i>Quên mật khẩu?
                    </a>
                </div>
            </form>
            
            <div class="mt-4 text-center">
                <p class="text-muted">Chưa có tài khoản? <a asp-action="Register" class="text-info text-decoration-none">Đăng ký ngay</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
