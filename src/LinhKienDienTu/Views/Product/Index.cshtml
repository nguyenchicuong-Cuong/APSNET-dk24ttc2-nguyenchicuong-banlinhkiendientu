@model IEnumerable<LinhKienDienTu.Models.Product>

@{
    ViewData["Title"] = "Sản phẩm";
    var categories = ViewData["Categories"] as List<LinhKienDienTu.Models.Category>;
}

<div class="row">
    <!-- Sidebar Filter -->
    <div class="col-md-3 mb-4">
        <div class="glass-card">
            <h4 class="mb-3 border-bottom border-secondary pb-2">Danh mục</h4>
            <ul class="list-unstyled">
                <li class="mb-2">
                    <a asp-action="Index" class="text-decoration-none text-light d-block py-1 hover-effect">
                        <i class="fa-solid fa-layer-group me-2"></i>Tất cả
                    </a>
                </li>
                @if (categories != null)
                {
                    foreach (var category in categories)
                    {
                        <li class="mb-2">
                            <a asp-action="Index" asp-route-categoryId="@category.Id" class="text-decoration-none text-light d-block py-1 hover-effect">
                                <i class="fa-solid fa-microchip me-2"></i>@category.Name
                            </a>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>

    <!-- Product Grid -->
    <div class="col-md-9">
        <div class="d-flex justify-content-between align-items-center mb-4 glass-card py-2 px-3">
            <h2 class="m-0">Danh sách sản phẩm</h2>
            <form asp-action="Index" method="get" class="d-flex">
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control glass-input me-2" placeholder="Tìm kiếm..." />
                <button type="submit" class="btn btn-primary glass-btn"><i class="fa-solid fa-magnifying-glass"></i></button>
            </form>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="glass-card h-100 d-flex flex-column product-card">
                        <div class="position-relative mb-3">
                            <div class="bg-white rounded-3 p-3 d-flex align-items-center justify-content-center" style="height: 180px;">
                                <i class="fa-solid fa-microchip fa-4x text-secondary"></i>
                            </div>
                            @if (item.StockQuantity == 0)
                            {
                                <span class="position-absolute top-0 end-0 badge bg-danger m-2">Hết hàng</span>
                            }
                            else
                            {
                                <span class="position-absolute top-0 end-0 badge bg-success m-2">Còn hàng</span>
                            }
                        </div>
                        
                        <h5 class="card-title text-truncate" title="@item.Name">@item.Name</h5>
                        <p class="small text-muted mb-1">Mã: @item.PartNumber</p>
                        <p class="card-text opacity-75 flex-grow-1 small">@item.Description</p>
                        
                        <div class="mt-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="fw-bold text-gradient fs-5">@item.Price.ToString("N0") ₫</span>
                            </div>
                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-light btn-sm glass-btn">Chi tiết</a>
                                <button class="btn btn-primary btn-sm rounded-pill"><i class="fa-solid fa-cart-plus me-1"></i> Thêm vào giỏ</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .hover-effect:hover {
        color: var(--primary-color) !important;
        padding-left: 5px;
        transition: all 0.2s;
    }
    .product-card {
        transition: all 0.3s ease;
    }
    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.3);
    }
</style>
