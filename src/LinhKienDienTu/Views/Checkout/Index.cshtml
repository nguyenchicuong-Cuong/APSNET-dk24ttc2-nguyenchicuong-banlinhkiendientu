@model LinhKienDienTu.ViewModels.CheckoutViewModel
@using LinhKienDienTu.Models

@{
    ViewData["Title"] = "Thanh toán";
    var cart = ViewBag.Cart as Cart;
}

<div class="container mt-4">
    <h2 class="mb-4 text-gradient fw-bold"><i class="fa-solid fa-credit-card me-2"></i>Thanh toán</h2>

    <div class="row">
        <div class="col-md-7">
            <div class="glass-card p-4">
                <h4 class="mb-3 border-bottom border-secondary pb-2">Thông tin giao hàng</h4>
                <form asp-action="Index" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="CustomerName" class="form-label text-light"></label>
                        <input asp-for="CustomerName" class="form-control glass-input" />
                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PhoneNumber" class="form-label text-light"></label>
                            <input asp-for="PhoneNumber" class="form-control glass-input" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label text-light"></label>
                            <input asp-for="Email" class="form-control glass-input" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ShippingAddress" class="form-label text-light"></label>
                        <textarea asp-for="ShippingAddress" class="form-control glass-input" rows="3"></textarea>
                        <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label text-light"></label>
                        <textarea asp-for="Notes" class="form-control glass-input" rows="2"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <h4 class="mb-3 mt-4 border-bottom border-secondary pb-2">Phương thức thanh toán</h4>
                    <div class="mb-4">
                        @foreach (var method in Enum.GetValues(typeof(PaymentMethod)))
                        {
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" asp-for="PaymentMethod" value="@method" id="payment_@method">
                                <label class="form-check-label text-light" for="payment_@method">
                                    @method
                                </label>
                            </div>
                        }
                        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill">
                            <i class="fa-solid fa-check me-2"></i>Xác nhận đặt hàng
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="col-md-5">
            <div class="glass-card sticky-top" style="top: 100px;">
                <h4 class="mb-3 border-bottom border-secondary pb-2">Đơn hàng của bạn</h4>
                @if (cart != null)
                {
                    <ul class="list-group list-group-flush bg-transparent">
                        @foreach (var item in cart.Items)
                        {
                            <li class="list-group-item bg-transparent text-light d-flex justify-content-between align-items-center px-0">
                                <div>
                                    <h6 class="my-0">@item.Product.Name</h6>
                                    <small class="text-muted">SL: @item.Quantity</small>
                                </div>
                                <span class="text-muted">@item.TotalPrice.ToString("N0") ₫</span>
                            </li>
                        }
                        <li class="list-group-item bg-transparent text-light d-flex justify-content-between align-items-center px-0 border-top border-secondary mt-2 pt-2">
                            <span>Tổng cộng (VND)</span>
                            <strong class="text-gradient fs-5">@cart.ComputeTotalValue().ToString("N0") ₫</strong>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </div>
</div>
